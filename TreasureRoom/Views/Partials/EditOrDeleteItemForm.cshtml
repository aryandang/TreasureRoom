
@inherits UmbracoViewPage<TreasureRoom.Models.ViewModel.EditOrDeleteItemViewModel>

@using (Html.BeginUmbracoForm("EditForm", "EditOrDeleteItemSurface", FormMethod.Post))
{
    <div class="container post-form_body">
        <br />
        <h3>@Html.Raw("Item Details:")</h3>
        <hr />
        <div class="form-group">
            <div class="post-title-show">@Html.LabelFor(m => Model.Title)</div>
            <div class="input-group">
                @Html.TextAreaFor(m => Model.Title, new { @class = "post-searchfield post-title", placeholder = "Title of the post" })
            </div>
            @Html.ValidationMessageFor(m => Model.Title, String.Empty, new { @class = "validation-messages" })
        </div>
        <div class="form-group">
            <div class="post-title-show">@Html.LabelFor(m => Model.Description)</div>
            <div class="input-group">
                @Html.TextAreaFor(m => Model.Description, new { @class = "post-searchfield post-description", placeholder = "Description of the lost item you've found" })
            </div>
            @Html.ValidationMessageFor(m => Model.Description, String.Empty, new { @class = "validation-messages" })
        </div>
        <div class="form-group">
            <div class="post-title-show">@Html.LabelFor(m => Model.ItemType)</div>
            <div class="input-group">
                @Html.DropDownListFor(m => Model.ItemType, new SelectList(Model.ItemTypesData, "ItemType", "ItemType"), "Select...", new { @class = "item-types_dropdown-post", @id = "item-type-dropdown" })
            </div>
            @Html.ValidationMessageFor(m => Model.ItemType, String.Empty, new { @class = "validation-messages" })
        </div>
        <div class="form-group">
            <div class="post-title-show">@Html.LabelFor(m => Model.ImagePath)</div>
            <div class="col-md-10">
                <input type="file" name="ImageFile" />
            </div>
            @Html.ValidationMessageFor(m => Model.ImagePath, String.Empty, new { @class = "validation-messages" })
        </div>
        <div class="form-group">
            <div class="post-title-show">@Html.LabelFor(m => Model.Postcode)</div>
            <div class="input-group">
                @Html.EditorFor(m => Model.Postcode, new { htmlAttributes = new { @class = "post-searchfield", placeholder = "Postcode" } })
            </div>
            @Html.ValidationMessageFor(m => Model.Postcode, String.Empty, new { @class = "validation-messages" })
        </div>
        <div class="form-group">
            <div class="post-title-show">@Html.LabelFor(m => Model.DatePosted)</div>
            <div class="input-group">
                @Html.EditorFor(m => Model.DatePosted, new { htmlAttributes = new { @class = "post-searchfield post-date", placeholder = "Date found" } })
            </div>
            @Html.ValidationMessageFor(m => Model.DatePosted, String.Empty, new { type = "date", @class = "validation-messages" })
        </div>
        <br />
        <h3>@Html.Raw("Security Questions:")</h3>
        <hr />
        <p><i>@Html.Raw("You must answer atleast two questions*")</i></p>
        <div class="form-group">
            <div class="post-title-show">@Html.LabelFor(m => Model.Question1)</div>
            <div class="input-group">
                @Html.DropDownListFor(m => Model.Question1, new SelectList(Model.Question1Data, "Question", "Question"), "Select...", new { @class = "item-types_dropdown-post" })
            </div>
            @Html.ValidationMessageFor(m => Model.Question1, String.Empty, new { @class = "validation-messages" })
        </div>
        <div class="form-group">
            <div class="post-title-show">@Html.LabelFor(m => Model.Answer1)</div>
            <div class="input-group">
                @Html.EditorFor(m => Model.Answer1, new { htmlAttributes = new { @class = "post-searchfield answer", placeholder = "Answer 1" } })
            </div>
            @Html.ValidationMessageFor(m => Model.Answer1, String.Empty, new { @class = "validation-messages" })
        </div>
        <div class="form-group">
            <div class="post-title-show">@Html.LabelFor(m => Model.Question2)</div>
            <div class="input-group">
                @Html.DropDownListFor(m => Model.Question2, new SelectList(Model.Question2Data, "Question", "Question"), "Select...", new { @class = "item-types_dropdown-post" })
            </div>
            @Html.ValidationMessageFor(m => Model.Question2, String.Empty, new { @class = "validation-messages" })
        </div>
        <div class="form-group">
            <div class="post-title-show">@Html.LabelFor(m => Model.Answer2)</div>
            <div class="input-group">
                @Html.EditorFor(m => Model.Answer2, new { htmlAttributes = new { @class = "post-searchfield answer", placeholder = "Answer 2" } })
            </div>
            @Html.ValidationMessageFor(m => Model.Answer2, String.Empty, new { @class = "validation-messages" })
        </div>
        <div class="form-group">
            <div class="post-title-show">@Html.LabelFor(m => Model.Question3)</div>
            <div class="input-group">
                @Html.DropDownListFor(m => Model.Question3, new SelectList(Model.Question3Data, "Question", "Question"), "Select...", new { @class = "item-types_dropdown-post" })
            </div>
            @Html.ValidationMessageFor(m => Model.Question3, String.Empty, new { @class = "validation-messages" })
        </div>
        <div class="form-group">
            <div class="post-title-show">@Html.LabelFor(m => Model.Answer3)</div>
            <div class="input-group">
                @Html.EditorFor(m => Model.Answer3, new { htmlAttributes = new { @class = "post-searchfield answer", placeholder = "Answer 3" } })
            </div>
            @Html.ValidationMessageFor(m => Model.Answer3, String.Empty, new { @class = "validation-messages" })
        </div>
        <br />
        <h3>@Html.Raw("Your Details:")</h3>
        <hr />
        <div class="form-group">
            <div class="post-title-show">@Html.LabelFor(m => Model.UserTitle)</div>
            <div class="input-group">
                @Html.DropDownListFor(m => Model.UserTitle, new SelectList(Model.TitlesData, "Title", "Title"), "Select...", new { @class = "item-types_dropdown-post" })
            </div>
            @Html.ValidationMessageFor(m => Model.UserTitle, String.Empty, new { @class = "validation-messages" })
        </div>
        <div class="form-group">
            <div class="post-title-show">@Html.LabelFor(m => Model.FullName)</div>
            <div class="input-group">
                @Html.EditorFor(m => Model.FullName, new { htmlAttributes = new { @class = "post-searchfield", placeholder = "Full Name" } })
            </div>
            @Html.ValidationMessageFor(m => Model.FullName, String.Empty, new { @class = "validation-messages" })
        </div>
        <div class="form-group">
            <div class="post-title-show">@Html.LabelFor(m => Model.EmailAddress)</div>
            <div class="input-group">
                @Html.EditorFor(m => Model.EmailAddress, new { htmlAttributes = new { @class = "post-searchfield", placeholder = "Email Address" } })
            </div>
            @Html.ValidationMessageFor(m => Model.EmailAddress, String.Empty, new { @class = "validation-messages" })
            <br />
            <i>@Html.Raw("All fields are mandatory*")</i>
        </div>
        <button id="Submit" class="search-btn">Submit</button>
    </div>
}
