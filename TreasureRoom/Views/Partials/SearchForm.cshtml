@inherits UmbracoViewPage<TreasureRoom.Models.ViewModel.SearchViewModel>

@using (Html.BeginUmbracoForm("SubmitForm", "SearchSurface", FormMethod.Post))
{
    <div class="container">
        <div class="row">
            <div class="form-group col-md-6">
                @Html.LabelFor(m => m.Keyword)
                <div class="input-group">
                    @Html.EditorFor(m => m.Keyword, new { @class = "search-field keyword", placeholder = "Keywords" })
                </div>
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(m => m.Postcode)
                <div class="input-group">
                    @Html.EditorFor(m => m.Postcode, new { @class = "search-field postcode", placeholder = "Postcode" })
                </div>
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(m => m.ItemType)
                <div class="input-group">
                    @Html.EditorFor(m => m.ItemType, new { @class = "search-field keyword", placeholder = "Item Type" })
                </div>
            </div>
            <div class="form-group col-md-6">
                <label>Search</label>
                <div class="input-group">
                    <button id="Submit" class="search-btn">Search</button>
                </div>
            </div>
        </div>
        </div>
}