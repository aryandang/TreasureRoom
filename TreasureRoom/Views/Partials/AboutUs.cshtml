@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.Home>
@using ContentModels = Umbraco.Web.PublishedModels;

<section id="about">
    <div class="container">
        <h1 class="title text-center">@Model.AboutUsHeader</h1>
        <div class="row">
            <div class="col-md-6 about">
                <p class="about-title">
                    @Model.MainTextHeading
                </p>
                <ul>
                    <li>
                        @Model.BulletPoint1
                    </li>
                    <li>
                        @Model.BulletPoint2
                    </li>
                    <li>
                        @Model.BulletPoint3
                    </li>
                    <li>
                        @Model.BulletPoint4
                    </li>
                </ul>
            </div>
            <div class="col-md-4">
            <img src="@Model.AboutUsImage.GetCropUrl()" class="image-fluid">
        </div>
        </div>
    </div>
</section>
